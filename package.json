{
  "name": "pixel-gif",
  "version": "1.0.0",
  "description": "One pixel GIF base64 encoded online generator",
  "type": "module",
  "source": "src/index.html",
  "scripts": {
    "start": "npm run clean && parcel",
    "build": "npm run clean && parcel build --no-source-maps --no-cache",
    "clean": "rm -rf .parcel-cache dist",
    "lint": "tsc --noEmit && eslint 'src/**/*.{ts,tsx}' && stylelint 'src/**/*.css'",
    "serve": "python3 -m http.server -d dist"
  },
  "dependencies": {
    "jsx-dom-runtime": "^0.28.0",
    "storeon-velo": "^4.1.1",
    "vanilla-colorful": "^0.7.2"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.3.0",
    "@types/wicg-file-system-access": "^2020.9.5",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "parcel": "^2.8.3",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "typescript": "^4.9.5"
  },
  "targets": {
    "default": {
      "publicUrl": "/pixel-gif/"
    }
  },
  "author": "Alexander Zaytsev",
  "license": "MIT"
}
