<%
  var title = manifest.name;
  var description = manifest.description;
  var homepage = manifest.scope;
  var image = new URL('icon.png', homepage).href;

  var ldJson = JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    url: homepage,
    potentialAction: {
      '@type': 'SearchAction',
      target: `${homepage}#{color}`,
      'query-input': {
        '@type': 'PropertyValueSpecification',
        valueRequired: true,
        valueMaxlength: 20,
        valueName: 'color'
      }
    }
  });
%>

<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= title %></title>
  <% if (isProd) { %>
    <base href="<%= homepage %>">
    <link rel="preload" as="fetch" fetchpriority="high" href="https://api.github.com/repos/shoonia/pixel-gif" crossorigin="anonymous">
    <link rel="manifest" href="manifest.json">
  <% } %>
  <link rel="canonical" href="<%= homepage %>">
  <link rel="icon" href="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==">
  <meta name="google-site-verification" content="JkNxAfkbyATcDv733CZNZPVT9UPc4rJNXxd31OgDwvY">
  <meta name="theme-color" content="<%= manifest.theme_color %>">
  <meta name="description" content="<%= description %>">
  <meta property="og:title" content="<%= title %>">
  <meta property="og:description" content="<%= description %>">
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= homepage %>">
  <meta property="og:image" content="<%= image %>">
  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@_shoonia">
  <meta name="twitter:creator" content="@_shoonia">
  <script type="application/ld+json"><%= ldJson %></script>
</head>

<body>
  <p class="sr-only">
    <%= description %>
  </p>
  <noscript>You need to enable JavaScript to run this app</noscript>
  <script id="colors" type="application/json">
    <%= JSON.stringify(colors) %>
  </script>
</body>

</html>
